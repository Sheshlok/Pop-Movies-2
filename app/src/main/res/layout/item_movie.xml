<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/movie_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.android.popmovies.widgets.AspectLockedImageView
        android:id="@+id/list_item_movie_poster_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:minHeight="?android:attr/listPreferredItemHeight"
        app:imageAspectRatio="@dimen/movie_item_image_aspect_ratio"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

